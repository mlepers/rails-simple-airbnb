<div class="container mt-3">
    <div class="row">
        <div class="col-12">
         <h1>All flats</h1>
         <h5><%= Flat.count %> flats available</h5>
        </div>
    </div>

    <div class="row">
        <% @flats.each do |flat| %>
                <div class="col-4">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=867&q=80" alt="Card image cap">
                        <div class="card-body">
                            <%= flat.name %> <br>
                            <em>Adress</em> : <br>
                            <%= flat.address %> 
                            <br>
                            <%= flat.price_per_night %> <i class="fas fa-euro-sign"></i> <br>
                            <br> <%= flat.number_of_guests %> <i class="fas fa-user-friends"></i>
                        </div>
                          <div class="card-body">
                                <%=link_to "More info", flat %>
                                <%= link_to "Edit",edit_flat_path(flat) %>
                                <%= link_to "Delete",
                                    flat_path(flat),
                                     method: :delete,
                                data: { confirm: "Are you sure?" } %>
                          </div>
                    </div>
                </div>
        <%end  %>
    </div>
     <%=link_to "Create a flat", new_flat_path %>
   
</div>



